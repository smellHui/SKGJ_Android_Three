<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 设置透明背景色 -->
    <solid android:color="#ffffff" />

    <!-- 设置一个黑色边框 -->
    <stroke
        android:width="2px"
        android:color="#ffffff" />
    <!-- 设置四个圆角的半径 -->
    <corners
        android:bottomLeftRadius="45px"
        android:bottomRightRadius="45px"
        android:topLeftRadius="45px"
        android:topRightRadius="45px" />
    <!-- 设置一下边距,让空间大一点 -->
    <padding
        android:bottom="25dp"
        android:left="20dp"
        android:right="20dp"
        android:top="10dp" />

</shape>