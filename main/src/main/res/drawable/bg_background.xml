<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:padding="10dp" android:shape="rectangle">

            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:radius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
            <stroke android:width="3px" android:color="@color/colorPrimary" />
        </shape>

    </item>
    <item>
        <shape android:padding="10dp" android:shape="rectangle">

            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:radius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
            <stroke android:width="3px" android:color="@color/blue_touch_user" />
        </shape>

    </item>
</selector>
