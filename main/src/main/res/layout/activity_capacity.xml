<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_common"
    tools:context=".view.maincommon.reservoirs.detail.CapacityActivity">

    <include layout="@layout/toolbar" />
    <include layout="@layout/reserviros_title_layout"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/lymargin"
        android:background="@drawable/jianjie_bigbase"
        android:paddingLeft="@dimen/padding_5"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textviewtop"
            android:drawableLeft="@drawable/jianjiejuxing"
            android:drawablePadding="@dimen/textviewpadding"
            android:text="水位库容曲线"
            android:textColor="@color/black"
            android:textSize="@dimen/basetextsize"
            android:textStyle="bold" />

        <TextView
            android:layout_marginLeft="20dp"
            android:textColor="@color/text_color"
            android:textSize="12sp"
            android:text="水位(m)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/line_chart"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            />




    </LinearLayout>


</LinearLayout>