<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_common"
    >

    <include layout="@layout/toolbar" />
    <include layout="@layout/reserviros_title_layout"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/lymargin"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textviewtop"
            android:drawableLeft="@drawable/jianjiejuxing"
            android:drawablePadding="@dimen/textviewpadding"
            android:text="香山水库应急预案"
            android:textColor="@color/black"
            android:textSize="@dimen/basetextsize"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/textviewtop"
            android:background="@color/text_color" />

        <TextView
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gongchenggaikuangstr"
            android:textColor="@color/text_color"
            android:textSize="@dimen/jianjietextsize" />


    </LinearLayout>

</LinearLayout>