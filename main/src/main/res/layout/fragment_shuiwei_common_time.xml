<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="5dp"
    android:background="@color/white"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/mstarttimeTv"
        android:layout_marginLeft="10dp"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="36dp"
        android:background="@drawable/bg_operation_tv"
        android:drawableRight="@mipmap/icon_arrow_down"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="2017-08-09 00 00 00 00"
        android:textColor="#191c21"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/sureSearchTv"

        android:layout_marginLeft="10dp"

        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"

        android:gravity="center"
        android:background="@drawable/bg_bt_start_yunwei"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/shangbaoTv"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"

        android:gravity="center"
        android:background="@drawable/bg_shangbao_tv_selector"
        android:text="上报"
        android:textColor="@color/white"
        android:textSize="14sp" />
</LinearLayout>