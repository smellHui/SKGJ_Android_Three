<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data></data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.tepia.base.view.MyEditUserInfoView
                    android:id="@+id/nameMv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height"
                    android:layout_marginTop="5dp" />

                <com.tepia.base.view.MyEditUserInfoView
                    android:id="@+id/tv_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height" />

                <com.tepia.base.view.MyEditUserInfoView
                    android:id="@+id/tv_num"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height" />

                <com.tepia.base.view.MyEditUserInfoView
                    android:id="@+id/tv_position"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height" />

                <com.tepia.base.view.MyEditUserInfoView
                    android:id="@+id/tv_manager_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height" />

                <com.tepia.base.view.MyEditUserInfoView
                    android:id="@+id/tv_manager_phone_num"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_add_photo_before"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:id="@+id/bt_sure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/bg_bt_start_yunwei"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="添加"
                        android:textColor="@color/white"
                        android:textSize="18dp" />
                </LinearLayout>
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>
</layout>
