<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="#e9f1fc"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    >
    <ImageView
        android:layout_marginRight="10dp"
        android:id="@+id/rightIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:src="@drawable/s_right" />

    <TextView
        android:id="@+id/numTv"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="--"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/text_color"
        android:layout_toLeftOf="@+id/rightIv"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:text="01"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/text_color"

        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/serrialTv"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <LinearLayout
        android:id="@+id/linearlayout_a"
        android:layout_toLeftOf="@+id/numTv"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/serrialTv"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="18sp"
            android:id="@+id/titleResnameTv"
            android:text="--"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:maxLines="1"
            android:textSize="12sp"
            android:id="@+id/middletitleResnameTv"
            android:text="--"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <View
        android:background="@color/text_color"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/linearlayout_a"
        android:layout_width="1dp"
        android:layout_height="match_parent"/>


</RelativeLayout>
