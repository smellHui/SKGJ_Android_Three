<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/bg_btn_detail_white"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="处理类型：" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/icon_arrow_down"
            android:drawablePadding="10dp"
            android:padding="@dimen/dp_10"
            android:gravity="center"
            android:minWidth="60dp"
            android:background="@drawable/bg_worker_item"
            android:text="请选择处理类型"
            android:textColor="@color/color_5C5C5D"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="处理意见：" />

        <EditText
            android:id="@+id/edit_msg"
            style="@style/input_edit_text" />
    </LinearLayout>

    <TextView
        android:id="@+id/photoTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/bgcolor"
        android:drawableLeft="@drawable/type_pic"
        android:drawablePadding="@dimen/drawablepadding"
        android:freezesText="true"
        android:gravity="left"
        android:padding="10dp"
        android:text="@string/picstr"
        android:textColor="@color/black"
        android:textSize="@dimen/textquesdm" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_image_pick"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="7dp"
        android:text="培训附件"
        android:textColor="#5f6166"
        android:textSize="16sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_file_pick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="提交" />

</LinearLayout>