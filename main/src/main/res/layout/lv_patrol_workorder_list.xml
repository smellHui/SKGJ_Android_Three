<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data></data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rootLy"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="2018-09-05 "
            android:textColor="#434952"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_reservoir"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="绿竹坝水库"
            android:textColor="#434952"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_yunwei_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="巡检"
            android:textColor="#434952"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_exec_worker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="李小双"
            android:textColor="#434952"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/tv_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="执行中"
            android:textColor="#434952"
            android:textSize="12dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_status"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:layout_weight="1.5"
            android:src="@drawable/operation_not_complete" />

        <TextView
            android:id="@+id/tv_qusetion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="Ⅷ"
            android:textColor="#434952"
            android:textSize="12dp" />
    </LinearLayout>
</layout>
