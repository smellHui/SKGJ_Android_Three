<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data></data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_common"
        android:orientation="vertical"
        tools:context=".view.maincommon.setting.train.TrainActivity">

        <include layout="@layout/toolbar" />

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/jianjiemarginleft"
            android:text="--"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:visibility="gone"
            android:id="@+id/littleTitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/jianjiemarginleft"
            android:layout_marginRight="@dimen/jianjiemarginleft"
            android:text="--"

            android:textColor="@color/text_color"
            android:textSize="14sp" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/peixunRec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView

            android:id="@+id/rerserviorNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/jianjiemarginbottom"
            android:layout_marginLeft="@dimen/jianjiemarginleft"
            android:drawableLeft="@drawable/peixun_zuzhi"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="水库名称：--"
            android:textColor="@color/text_color"
            android:textSize="@dimen/jianjietextsize" />

        <TextView
            android:id="@+id/nameTv"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/jianjiemarginbottom"
            android:layout_marginLeft="@dimen/jianjiemarginleft"
            android:drawableLeft="@drawable/peixun_didian"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="上报人：--"
            android:textColor="@color/text_color"
            android:textSize="@dimen/jianjietextsize" />

        <TextView
            android:id="@+id/timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/jianjiemarginbottom"
            android:layout_marginLeft="@dimen/jianjiemarginleft"
            android:drawableLeft="@drawable/peixun_time"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="上报时间：--"
            android:textColor="@color/text_color"
            android:textSize="@dimen/jianjietextsize" />

        <View
            android:layout_width="match_parent"

            android:layout_height="0.5dp"
            android:layout_margin="@dimen/jianjiemarginleft"
            android:background="@color/text_color" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/jianjiemarginbottom"
            android:layout_marginLeft="@dimen/jianjiemarginleft"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="应急情况描述"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView

            android:id="@+id/descriptionTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/jianjiemarginbottom"
            android:layout_marginLeft="@dimen/jianjiemarginleft"
            android:layout_marginRight="@dimen/jianjiemarginleft"
            android:text="--"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_margin="@dimen/jianjiemarginleft"
            android:background="@color/text_color" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/jianjiemarginbottom"
            android:layout_marginLeft="@dimen/jianjiemarginleft"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="现场视频"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/videoIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_empty" />


    </LinearLayout>
</layout>