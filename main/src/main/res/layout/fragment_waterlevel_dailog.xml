<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_dialog_shangbao"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_shangbao_dialogbg_selector"
    >

    <TextView
        android:id="@+id/title_waterlevelTv"
        android:background="@drawable/bg_shangbao_bg_selector"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <LinearLayout
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/nameTvofdialog"
            android:gravity="center"
            android:layout_weight="2"
            android:text="时间"
            android:textColor="#5f6166"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:maxLines="1"
            android:id="@+id/selectTimeTv"
            android:layout_weight="4"

            android:text=""
            android:hint="请选择时间"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

       <!-- <ImageView
            android:layout_weight="1"
            android:src="@drawable/s_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />-->
    </LinearLayout>

    <View
        android:background="@color/background_common"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:gravity="center"
            android:layout_weight="2"
            android:text="水位数值"
            android:textColor="#5f6166"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/selectShuiweiEv"
            android:inputType="number|numberDecimal"
            android:background="@null"
            android:layout_weight="4"
            android:hint="请输入水位值"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <View
        android:background="@color/background_common"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:background="@drawable/bg_shangbao_dialogbottom_selector"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/cancelBtn"
            android:layout_margin="15dp"
            android:background="#e0e3eb"
            android:text="取 消"
            android:textColor="#979dac"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/suerBtn"
            android:layout_margin="15dp"
            android:background="@drawable/bg_bt_start_yunwei"
            android:text="确 定"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>
