<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="84dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/operation_list_item_bg">

        <ImageView
            android:id="@+id/iv_complete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/operation_complete" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_complete"
            android:text="2018-08-04 08:20"
            android:textColor="#232a39"
            android:layout_marginTop="14dp"
            android:textSize="18sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_date"
                android:layout_toRightOf="@+id/iv_complete"
                android:text="巡检人:张三"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:textColor="#979eab"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已完成"
            android:textSize="18sp"
            android:textColor="#46c189"
            android:layout_toLeftOf="@+id/tv_enter"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
           />

        <ImageView
            android:id="@+id/tv_enter"
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/s_right" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>