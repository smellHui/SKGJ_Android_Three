<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/marin_10"
    android:layout_marginRight="@dimen/marin_10"
    android:layout_marginTop="@dimen/marin_10"
    android:layout_marginBottom="@dimen/marin_10"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/mstarttimeTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_weight="2"
        android:background="@drawable/bg_background"
        android:drawableLeft="@drawable/a_time"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:hint="@string/starttime"
        android:padding="5dp"
        android:text=""
        android:textColor="@color/color_333"
        android:textSize="@dimen/base_river_left" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center"
        android:text="@string/tostr"
        android:textSize="@dimen/base_river_left" />

    <TextView
        android:id="@+id/mendtimeTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@drawable/bg_background"
        android:drawableLeft="@drawable/a_time"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:hint="@string/starttime"
        android:padding="5dp"
        android:text=""
        android:textColor="@color/color_333"
        android:textSize="@dimen/base_river_left" />





</LinearLayout>
