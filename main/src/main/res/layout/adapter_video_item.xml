<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootVedioLy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_video_icon"
        android:layout_width="35dp"
        android:layout_height="36dp"
        android:layout_marginLeft="18dp"
        android:contentDescription="icon"
        android:src="@drawable/jianjie_vedio" />

    <RelativeLayout
        android:id="@+id/rl_video_info"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/rl_video_icon">

        <TextView
            android:maxLines="1"
            android:id="@+id/tv_video_channelname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="生态池生态池生态池"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:maxLines="1"
            android:id="@+id/tv_video_channelStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dp"
            android:text="连接状态：正常"
            android:textColor="@color/channelstatus"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>
