<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="260dp"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:background="@android:color/white"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:gravity="center"
            android:text="基础底图"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layer_vector"
                android:layout_width="wrap_content"
                android:layout_height="98dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_vector"
                    android:layout_width="92dp"
                    android:layout_height="65dp"
                    android:background="@drawable/ll_selector_background"
                    android:padding="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_base_map_vector"/>

                <android.support.v7.widget.CardView
                    android:layout_width="58dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardBackgroundColor="@android:color/white"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardUseCompatPadding="true"
                    >

                    <LinearLayout
                        android:layout_width="58dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:background="@color/color_c8c8c8"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/im_tv_vector"
                            android:layout_width="20dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="3dp"
                            android:background="@color/color_c8c8c8"
                            android:src="@drawable/ic_map"/>

                        <TextView
                            android:id="@+id/tv_vector"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/color_c8c8c8"
                            android:gravity="center"
                            android:text="矢量"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layer_raster"
                android:layout_width="wrap_content"
                android:layout_height="98dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_raster"
                    android:layout_width="92dp"
                    android:layout_height="65dp"
                    android:background="@drawable/ll_selector_background"
                    android:padding="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_base_map_raster"/>

                <android.support.v7.widget.CardView
                    android:layout_width="58dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardBackgroundColor="@android:color/white"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="58dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:background="@color/color_c8c8c8"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/im_tv_raster"
                            android:layout_width="20dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="3dp"
                            android:background="@color/color_c8c8c8"
                            android:src="@drawable/ic_map"/>

                        <TextView
                            android:id="@+id/tv_raster"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/color_c8c8c8"
                            android:gravity="center"
                            android:text="影像"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="数据查询"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_clean"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="清空"
                android:visibility="gone"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>

        </LinearLayout>

    </LinearLayout>
   <!-- <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:background="@color/color_white"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            &lt;!&ndash;<include layout="@layout/item_one"/>&ndash;&gt;

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical"
        android:background="@android:color/white"
        >
    </android.support.v7.widget.RecyclerView>
</LinearLayout>