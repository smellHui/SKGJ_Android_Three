<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".view.maincommon.reservoirs.detail.ItemSafeJiandingActivity">

    <include layout="@layout/toolbar" />

    <View
        android:layout_width="match_parent"

        android:layout_height="5dp"
        android:background="@color/background_common" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/left_15"
            android:drawableLeft="@drawable/jianjie_xiangqing"
            android:drawablePadding="10dp"
            android:text="加强水利水电建设的安全预警"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            android:textStyle="bold" />


    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_common" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="@dimen/jianjiemarginbottom"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/jianjie_circle"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="水库名称：绿竹坝水库"
        android:textColor="@color/text_color"
        android:textSize="@dimen/jianjietextsize" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/jianjiemarginbottom"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/jianjie_circle"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="类型：水库"
        android:textColor="@color/text_color"
        android:textSize="@dimen/jianjietextsize" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/jianjiemarginbottom"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/jianjie_circle"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="报告时间：2018-05-18"
        android:textColor="@color/text_color"
        android:textSize="@dimen/jianjietextsize" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/jianjiemarginbottom"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/jianjie_circle"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="添加人：xxx"
        android:textColor="@color/text_color"
        android:textSize="@dimen/jianjietextsize" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/jianjiemarginbottom"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/jianjie_circle"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="添加日期：2018-05-06 18:00:00"
        android:textColor="@color/text_color"
        android:textSize="@dimen/jianjietextsize" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_common" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/left_15"
        android:drawablePadding="10dp"
        android:text="附件"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginLeft="@dimen/left_15"
        android:layout_marginRight="@dimen/left_15"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:background="@drawable/jianjie_fujian_bg"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="12dp"
            android:src="@drawable/jianjie_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="2"
            android:layout_marginLeft="5dp"
            android:text="水库安全管理...课件.doc"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_weight="0.5"

            android:layout_marginLeft="12dp"
            android:src="@drawable/jianjie_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>