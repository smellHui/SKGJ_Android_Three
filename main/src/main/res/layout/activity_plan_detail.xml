<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.main.jihua.PlanDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <include layout="@layout/toolbar" />

        <ScrollView
            android:id="@+id/sv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="计划名称:"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
                <!--android:background="@drawable/bg_search_edittext"-->
                <TextView
                    android:id="@+id/tv_plan_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="3"
                    android:background="@null"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:paddingLeft="5dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/darker_gray"
                    android:text="" />
            </LinearLayout>
            <View style="@style/LineH" />
            <View style="@style/LineH" />
            <View style="@style/LineH" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="计划类型:"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
                <!--android:background="@drawable/bg_search_edittext"-->
                <TextView
                    android:id="@+id/tv_plan_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="3"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:text="" />
            </LinearLayout>
            <View style="@style/LineH" />
            <View style="@style/LineH" />
            <View style="@style/LineH" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="运维类型:"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
                <!--android:background="@drawable/bg_search_edittext"-->
                <TextView
                    android:id="@+id/tv_operation_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="3"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:text="" />
            </LinearLayout>
            <View style="@style/LineH" />
            <View style="@style/LineH" />
            <View style="@style/LineH" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="水库名称:"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
                <!--android:background="@drawable/bg_search_edittext"-->
                <TextView
                    android:id="@+id/tv_reservoir_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="3"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:paddingLeft="5dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/darker_gray"
                    android:text="" />
            </LinearLayout>
            <View style="@style/LineH" />
            <View style="@style/LineH" />
            <View style="@style/LineH" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="top|center_horizontal"
                    android:layout_gravity="top"
                    android:text="执行时间:"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp" />
                <!--android:background="@drawable/bg_search_edittext"-->
                <TextView
                    android:id="@+id/tv_plan_times"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="3"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="" />
            </LinearLayout>
            <View style="@style/LineH" />
            <View style="@style/LineH" />
            <View style="@style/LineH" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="详情描述:"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
                <!--android:background="@drawable/bg_search_edittext"-->
                <TextView
                    android:id="@+id/et_remarks"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="3"
                    android:background="@null"
                    android:gravity="top"
                    android:paddingLeft="5dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/darker_gray"
                    android:text="" />
            </LinearLayout>
            <View style="@style/LineH" />
            <View style="@style/LineH" />
            <View style="@style/LineH" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:text="工单计划生成时间:"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
                <!--android:background="@drawable/bg_search_edittext"-->
                <TextView
                    android:id="@+id/tv_create_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:padding="2dp"
                    android:paddingLeft="5dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/darker_gray"
                    android:text="2018-09-06" />
            </LinearLayout>
            <View style="@style/LineH" />
            <View style="@style/LineH" />
            <View style="@style/LineH" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingBottom="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="计划状态:"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <TextView
                        android:id="@+id/tv_isGenerate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="#009688"
                        android:gravity="center_vertical"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:textColor="@color/color_white"
                        android:text="已生成" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>