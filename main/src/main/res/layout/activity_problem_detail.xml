<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/rootLayout"
    >

    <include layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/rootScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:drawableLeft="@drawable/type_name"
                    android:drawablePadding="@dimen/drawablepadding"
                    android:gravity="center"
                    android:text="@string/titlestr"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/textquesdm" />

                <TextView
                    android:id="@+id/nameTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="@string/hinttitle"
                    android:maxLength="100"
                    android:text="--"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textquesdm" />
            </LinearLayout>

            <View style="@style/LineH" />

            <View style="@style/LineH" />

            <View style="@style/LineH" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:drawableLeft="@drawable/type_type"
                    android:drawablePadding="@dimen/drawablepadding"
                    android:gravity="center"
                    android:text="@string/typestr"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/textquesdm" />

                <TextView
                    android:id="@+id/typeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:text="--"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textquesdm"

                    />
            </FrameLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/typeRecyclerV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <View style="@style/LineH" />

            <View style="@style/LineH" />

            <View style="@style/LineH" />



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:drawableLeft="@drawable/type_revisor"
                    android:drawablePadding="@dimen/drawablepadding"
                    android:padding="10dp"
                    android:text="@string/resviorstr"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/textquesdm" />

                <TextView
                    android:id="@+id/resviorTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="10dp"
                    android:text="--"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textquesdm"

                    />
            </FrameLayout>

            <View style="@style/LineH" />

            <View style="@style/LineH" />

            <View style="@style/LineH" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:drawableLeft="@drawable/type_man"
                    android:drawablePadding="@dimen/drawablepadding"
                    android:padding="10dp"
                    android:text="@string/updatemanstr"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/textquesdm" />

                <TextView
                    android:id="@+id/updatemanTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="10dp"
                    android:text="--"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textquesdm"

                    />
            </FrameLayout>

            <View style="@style/LineH" />

            <View style="@style/LineH" />

            <View style="@style/LineH" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:drawableLeft="@drawable/type_time"
                    android:drawablePadding="@dimen/drawablepadding"
                    android:padding="10dp"
                    android:text="@string/updatetimestr"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/textquesdm" />

                <TextView
                    android:id="@+id/updatetimeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="10dp"
                    android:text="--"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textquesdm"

                    />
            </FrameLayout>

            <View style="@style/LineH" />

            <View style="@style/LineH" />

            <View style="@style/LineH" />


            <TextView
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/type_des"
                android:drawablePadding="@dimen/drawablepadding"
                android:gravity="left"
                android:padding="10dp"
                android:text="@string/contentstr"
                android:textColor="@color/text_color"
                android:textSize="@dimen/textquesdm" />

            <View style="@style/LineH" />

            <View style="@style/LineH" />

            <View style="@style/LineH" />

            <TextView
                android:id="@+id/contentTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="top"
                android:padding="10dp"
                android:text="--"
                android:textColor="@color/black"
                android:textSize="@dimen/textquesdm" />

            <View style="@style/LineH" />

            <View style="@style/LineH" />

            <View style="@style/LineH" />


            <TextView
                android:id="@+id/photoTitleTv"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableLeft="@drawable/type_pic"
                android:drawablePadding="@dimen/drawablepadding"
                android:gravity="left"
                android:padding="10dp"
                android:text="@string/picstr_problem"
                android:textColor="@color/text_color"
                android:textSize="@dimen/textquesdm"

                />

            <View style="@style/LineH" />

            <View style="@style/LineH" />

            <View style="@style/LineH" />


            <LinearLayout
                android:id="@+id/imageLy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:visibility="gone">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_image_pick"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp" />

                <View style="@style/LineH" />

                <View style="@style/LineH" />

                <View style="@style/LineH" />
            </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:drawableLeft="@drawable/type_status"
                    android:drawablePadding="@dimen/drawablepadding"
                    android:padding="10dp"
                    android:text="@string/excuteStatusstr"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/textquesdm" />

                <TextView
                    android:id="@+id/excuteStatusTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="10dp"
                    android:text="--"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textquesdm"

                    />
            </FrameLayout>

            <View style="@style/LineH" />

            <View style="@style/LineH" />

            <View style="@style/LineH" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants"
                android:padding="10dp"
                android:visibility="visible">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/bizRy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/fankuiLy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View style="@style/LineH" />

                <View style="@style/LineH" />

                <View style="@style/LineH" />


                <EditText
                    android:textColor="@color/black"
                    android:textSize="@dimen/textquesdm"
                    android:padding="5dp"
                    android:background="@drawable/bg_search_edittext"
                    android:gravity="top|left"
                    android:hint="请输入意见反馈"
                    android:layout_margin="10dp"
                    android:id="@+id/excuteDesEv"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />

                <TextView
                    android:id="@+id/sendFankuiBtn"
                    android:layout_width="211dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="60dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_loginout_btn"
                    android:gravity="center"
                    android:text="@string/sendbtnstr"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"

                android:id="@+id/querenLy"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View style="@style/LineH" />

                <View style="@style/LineH" />

                <View style="@style/LineH" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="center"
                        android:text="问题标记为"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/textquesdm" />

                    <TextView
                        android:id="@+id/statusUpTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:text="请选择>"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textquesdm"

                        />
                </FrameLayout>

                <View style="@style/LineH" />

                <View style="@style/LineH" />

                <View style="@style/LineH" />

                <FrameLayout
                    android:id="@+id/typeUpFrlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="center"
                        android:text="问题分配给"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/textquesdm" />

                    <TextView
                        android:id="@+id/typeUpTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:text="请选择>"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textquesdm"

                        />
                </FrameLayout>

                <View style="@style/LineH" />

                <View style="@style/LineH" />

                <View style="@style/LineH" />

                <TextView
                    android:id="@+id/sendQuerenBtn"
                    android:layout_width="211dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="60dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_loginout_btn"
                    android:gravity="center"
                    android:text="@string/sendbtnstr"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/shenheLy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View style="@style/LineH" />

                <View style="@style/LineH" />

                <View style="@style/LineH" />

                <FrameLayout

                    android:id="@+id/shenheFrlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:gravity="center"
                        android:text="审批结果"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/textquesdm" />

                    <RadioGroup
                        android:id="@+id/shenRg"
                        android:layout_gravity="right|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <RadioButton
                            android:checked="true"
                            android:id="@+id/radio_shen_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="同意"
                            />
                        <RadioButton
                            android:checked="false"

                            android:id="@+id/radio_shen_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="不同意"
                            />


                    </RadioGroup>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/isAniamlFl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:gravity="center"
                        android:text="是否通知业主"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/textquesdm" />

                    <RadioGroup
                        android:id="@+id/isAdminRg"

                        android:layout_gravity="right|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <RadioButton
                            android:checked="false"

                            android:id="@+id/radio_isadmin_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="是"
                            />
                        <RadioButton
                            android:checked="true"
                            android:id="@+id/radio_isadmin_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="否"
                            />


                    </RadioGroup>
                </FrameLayout>


                <EditText
                    android:textColor="@color/black"
                    android:textSize="@dimen/textquesdm"
                    android:padding="5dp"
                    android:background="@drawable/bg_search_edittext"
                    android:gravity="top|left"
                    android:hint="请输入审核意见"
                    android:layout_margin="10dp"
                    android:id="@+id/shenheEv"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />

                <TextView
                    android:id="@+id/sendShenheBtn"
                    android:layout_width="211dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="60dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_loginout_btn"
                    android:gravity="center"
                    android:text="@string/sendbtnstr"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
