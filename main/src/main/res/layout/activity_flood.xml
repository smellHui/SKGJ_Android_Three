<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_common"
    tools:context=".view.maincommon.reservoirs.detail.FloodActivity">

    <include layout="@layout/toolbar" />
    <include layout="@layout/reserviros_title_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/lymargin"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textviewtop"
            android:drawableLeft="@drawable/jianjiejuxing"
            android:drawablePadding="@dimen/textviewpadding"
            android:text="物资列表"
            android:textColor="@color/black"
            android:textSize="@dimen/basetextsize"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/floodRec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>




    </LinearLayout>

</LinearLayout>